@page "/counter"
@inject IJSRuntime JSRuntime

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<br />

 <div id="chart-container">FusionCharts XT will load here v1!</div>

<button class="btn btn-primary" @onclick="CallJsMethod">Render Charts now</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private async Task CallJsMethod()
    {
        await JSRuntime.InvokeVoidAsync("GetStudentName");
    }
}
